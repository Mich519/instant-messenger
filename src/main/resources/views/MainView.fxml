<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mj.project.gui.controllers.MainViewController">
   <children>
      <VBox>
         <children>
            <MenuBar prefHeight="25.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Options">
                    <items>
                      <MenuItem fx:id="optionsMenuItem" mnemonicParsing="false" text="Options" />
                    </items>
                  </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <HBox prefHeight="45.0" prefWidth="600.0">
               <children>
                  <TextField fx:id="receiverPortTextField" />
                  <Button fx:id="connectButton" mnemonicParsing="false" text="Connect" />
                  <Button fx:id="listenButton" mnemonicParsing="false" text="Listen" />
                  <Button fx:id="stopButton" mnemonicParsing="false" text="Stop" />
               </children>
            </HBox>
            <HBox>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <ScrollPane prefHeight="165.0" prefWidth="580.0" HBox.hgrow="ALWAYS">
                     <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0">
                           <children>
                              <VBox fx:id="messageContainer" prefHeight="204.0" prefWidth="548.0">
                                 <children>
                                    <Label text="Label" />
                                    <Label text="Label" />
                                    <Label text="Label" />
                                    <Label text="Label" />
                                    <Label text="Label" />
                                    <Label text="Label" />
                                    <Label text="Label" />
                                    <Label text="Label" />
                                    <Label text="Label" />
                                    <Label text="Label" />
                                    <Label text="Label" />
                                    <Label text="Label" />
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                     </content>
                  </ScrollPane>
               </children>
            </HBox>
            <VBox prefWidth="600.0" VBox.vgrow="ALWAYS">
               <children>
                  <HBox prefHeight="89.0" prefWidth="580.0" VBox.vgrow="ALWAYS">
                     <children>
                        <VBox alignment="TOP_CENTER" />
                        <TextArea fx:id="textArea" prefHeight="67.0" prefWidth="466.0">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </TextArea>
                        <Button fx:id="sendButton" alignment="CENTER" mnemonicParsing="false" text="Send" textAlignment="CENTER" />
                        <Button fx:id="attachFileButton" mnemonicParsing="false" text="Attach file ..." />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
                  <Label fx:id="statusLabel" alignment="TOP_LEFT" text="status" />
                  <ProgressBar fx:id="progressBar" progress="0.0">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </ProgressBar>
               </children></VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
